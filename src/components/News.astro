---
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
let posts = (await getCollection("blog")).sort(
  (b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);

let currentPath = Astro.request.url.pathname;
posts = posts.filter(post => `/news/${post.slug}/` !== currentPath);
posts.sort(() => Math.random() - 0.5);
posts = posts.slice(0, 3);
---

<body>
  <div class="postholder">
    {
      posts.map(post => (
        <div class="post">
          <a href={`/news/${post.slug}/`}>
            <FormattedDate date={post.data.pubDate} />
            <div class="faded" />
            {post.data.heroImage && (
              <img loading="lazy" class="heroImage" src={post.data.heroImage} />
            )}
            <div class="title">
              {post.data.authImage && (
                <img class="authimage" src={post.data.authImage} alt="" />
              )}
              <b style="color:white !important; width:80%; margin-right:10px; text-overflow: ellipsis; white-space: nowrap; overflow: hidden; text-align:right; position:relative;">
                {post.data.title}
              </b>
            </div>
            <div class="desc">{post.data.description}</div>
          </a>
        </div>
      ))
    }
  </div>
</body>

<style>
  .postholder {
    width: 95%;
    max-width: 1500px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(330px, 1fr));
    position: absolute;
    gap: 8px;
    left: 50%;
    transform: translate(-50%, 20px);
    position: relative;
    z-index: 10;
  }

  .post {
    position: relative;
    height: 230px;
    width: 100%;
    font-family: Gilroy;
    hyphens: auto;
    overflow: hidden;
    transition: 0.5s;
  }

  .post:hover:before {
    box-shadow: inset 0 0 0px 3px var(--bg-opaque-2);
    border-radius: 16px;
    border: solid 0px transparent;
    transition: 0.2s;
  }

  .post:before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    box-shadow: inset 0 0 0px 3px var(--bg-opaque-1);
    z-index: 1;
    border-radius: 16px;
    border: solid 0px transparent;
    transition: 0.2s;
  }

  .post:nth-child(1) {
    border-radius: 18px 8px 8px 18px;
  }

  .post:nth-child(1):before {
    border-radius: 18px 8px 8px 18px;
  }

  .post:nth-child(2) {
    border-radius: 8px 8px 8px 8px;
  }

  .post:nth-child(2):before {
    border-radius: 8px 8px 8px 8px;
  }

  .post:nth-child(3) {
    border-radius: 8px 18px 18px 8px;
  }

  .post:nth-child(3):before {
    border-radius: 8px 18px 18px 8px;
  }

  .authimage {
    margin-right: 10px;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    border: 1px solid #ffffff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.297);
    z-index: 10000000000;
  }

  .heroImage {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: 0.3s;
  }

  .post:hover .heroImage {
    filter: blur(8px) brightness(0.7);
    rotate: -3deg;
    scale: 120%;
    z-index: 0;
    transition: 0.3s;
  }

  .post:hover {
    background-color: rgba(206, 206, 206, 0.117);
    transform: translate(0, -5px);
    transition: 0.5s;
  }

  .post:active {
    transform: scale(0.98);
    transition: 0.2s;
  }

  .title {
    width: 100%;
    z-index: 11;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
    font-size: max(20px, 30px);
    bottom: 20px;
    right: 10px;
    line-height: 30px;
    font-family: Gilroy;
    transition: 0.5s;
    position: absolute;
  }

  .post:hover .title {
    bottom: 60%;
    transform: translate(0, 50%);
    transition: 0.5s;
  }

  .desc {
    position: absolute;
    font-family: inter;
    width: 90%;
    font-size: 20px;
    right: 20px;
    bottom: 0;
    transform: translate(0, 50px);
    color: white !important;
    opacity: 0;
    text-align: right;
    transition: 0.5s;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .post:hover .desc {
    bottom: 48%;
    opacity: 1;
    transform: translate(0, 100%);
    transition: 0.5s;
  }

  .faded {
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(2, 0, 36);
    background: linear-gradient(
      0deg,
      rgba(60, 60, 60, 0.337) 0%,
      rgba(244, 244, 244, 0) 100%
    );
    position: absolute;
    transition: 0.5s;
  }

  .post:hover .fade {
    transform: translate(0, 50px);
    transition: 0.5s;
  }

  a {
    bottom: 50px;
    z-index: 11;
    color: white !important;
  }

  @keyframes fadeup {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @media (max-width: 1000px) {
    .post:nth-child(1) {
      border-radius: 18px 18px 8px 8px;
    }

    .post:nth-child(1):before {
      border-radius: 18px 18px 8px 8px;
    }

    .post:nth-child(2) {
      border-radius: 8px 8px 8px 8px;
    }

    .post:nth-child(2):before {
      border-radius: 8px 8px 8px 8px;
    }

    .post:nth-child(3) {
      border-radius: 8px 8px 18px 18px;
    }

    .post:nth-child(3):before {
      border-radius: 8px 8px 18px 18px;
    }
  }
</style>
