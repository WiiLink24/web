---
import { changeLanguage } from "i18next";

changeLanguage("es");
---

<div class="section no-pad-bot">
	<div class="container">
		<br>
		<br>
		<h1 class="header center"><i aria-hidden="true" class="fas fa-palette"></i> Branding</h1><br>
	</div>
</div>
<div class="section">
	<div class="container">
		<h2 class="header center">Logos</h2>
		<div class="row">
			<div class="col l6">
				<div class="card">
					<div class="card-image">
						<img src="https://www.rc24.xyz/images/logo_blue.png">
					</div>
					<div class="card-content">
						<span class="card-title">Logo (Blue)</span>
					</div>
					<div class="card-action">
						<a href="https://www.rc24.xyz/images/logo_blue.png">PNG</a>
						<a href="https://www.rc24.xyz/images/logo_blue.svg">SVG</a>
					</div>
				</div>
			</div>
			<div class="col l6">
				<div class="card">
					<div class="card-image" style="background-color: #1eb5ec">
						<img src="https://www.rc24.xyz/images/logo_white.png">
					</div>
					<div class="card-content">
						<span class="card-title">Logo (White)</span>
					</div>
					<div class="card-action">
						<a href="https://www.rc24.xyz/images/logo_white.png">PNG</a>
						<a href="https://www.rc24.xyz/images/logo_white.svg">SVG</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row" style="display:flex; ">
			<div class="col m4">
				<div class="card">
					<div class="card-image">
						<img src="https://www.rc24.xyz/images/logo_small_blue.png">
					</div>
					<div class="card-content">
						<span class="card-title">Small Logo (Blue Background)</span>
					</div>
					<div class="card-action">
						<a href="https://www.rc24.xyz/images/logo_small_blue.png">PNG</a>
					</div>
				</div>
			</div>
			<div class="col m4">
				<div class="card">
					<div class="card-image">
						<img src="https://www.rc24.xyz/images/logo_small.png">
					</div>
					<div class="card-content">
						<span class="card-title">Small Logo (Blue Transparent)</span>
					</div>
					<div class="card-action">
						<a href="https://www.rc24.xyz/images/logo_small.png">PNG</a>
					</div>
				</div>
			</div>
			<div class="col m4">
				<div class="card">
					<div class="card-image" style="background-color: #1eb5ec">
						<img src="https://www.rc24.xyz/images/logo_small_white.png">
					</div>
					<div class="card-content">
						<span class="card-title">Small Logo (White Transparent)</span>
					</div>
					<div class="card-action">
						<a href="https://www.rc24.xyz/images/logo_small_white.png">PNG</a>
					</div>
				</div>
			</div>
		</div>
		<h2 class="header center">Color</h2>
		<div class="row">
			<div class="col">
				<div class="card" style="background-color: #1eb5ec !important">
					<div class="card-content">
						<span class="card-title">Reconnected Blue</span>
						<br><br><br><br><br>
						#18B6ED
						<br>
						CMYK: 68, 8, 0, 0
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		border-radius:8px;
		border:2px solid #ffffff20;
		box-shadow: 0px 0px 28px #6c6c6c20;
		overflow: hidden;
	}

	.card-image{
		padding:20px;
	}
</style>