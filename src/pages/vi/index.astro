---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Donate from "../../components/Donate.astro";
import Services from "../../components/Services.astro";
import BuildInfo from "../../components/build.astro";
import Team from "../../components/team.astro";
import Socials from "../../components/Socials.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import JumpIn from "../../components/JumpIn.astro";
import Footer from "../../components/Footer.astro";
import Ad from "../../components/Ad.astro";
import Themes from "astro-themes";
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import { localizePath } from "astro-i18next";

changeLanguage("vi");
---

<Layout
  title={t("site.title")}
  description={t("site.description")}
  image={t("site.img")}>
  <html lang={i18next.language}>
    <body>
      <Themes defaultTheme="dark" />

      <div class="symbolholder">
        <div class="backsymbol" id="movable">
          <div class="square2" id="square2">
            <Header isGuide="display:none;" isMain="display:none;" />
            <div id="top" class="top">
              <div
                id="warn"
                class="alert"
                style="width:400px; background-color:var(--bg-color-tertiary); animation:fadeout2 500ms 8s linear forwards; display:none; z-index:1000000; position:absolute;"
                role="alert">
              </div>

            <Hero />
            </div>
            <Services />

            <Ad />

            <BuildInfo />

            <Donate />

            <Team />

            <Socials />

            <JumpIn />

            <div class="mainFooter">
              <Footer />
            </div>
          </div>

          <div class="square"></div>
          <div class="footer-holder" id="footer">
            <Footer
              display="display:none !important;"
              top="top:0px; background:none; --remove-border:0px;"
              flex="gap:8px; flex-wrap:nowrap;"
              maxwidth="max-width:1500px;"
            />
          </div>
        </div>
      </div>
      <div class="bottomleftcornerholder">
        <svg
          class="bottomleftcorner"
          width="100%"
          height="100%"
          viewBox="0 0 391 364"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xml:space="preserve"
          xmlns:serif="http://www.serif.com/"
          style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:1.5;">
          <g transform="matrix(1,0,0,1,-1856,-885)">
            <path
              id="pathcorner"
              d="M1903.53,886.132L1857.55,885.823C1857.93,885.824 1852.78,908.579 1887.46,940.825C1922.21,973.123 2200.55,1234 2200.55,1234C2200.55,1234 2214.8,1247.92 2246.02,1247.92L2245.96,1202.65L2239.82,1202.7C2231.35,1202.68 2228.7,1197.77 2214.96,1184.58C2188.64,1159.33 1909.5,898.26 1909.5,898.26C1909.5,898.26 1903.8,892.648 1903.53,886.132Z"
              style="stroke-width:1px;"></path>
          </g>
        </svg>
        <img
          alt=""
          src="/img/corner-bot.svg"
          class="svcicons"
          style="top:5px; left:-5px; z-index:-10; position:absolute;"
          width="395px"
          height="395px"
        />
      </div>
    </body>
  </html>
</Layout>

<script is:inline>
  document.getElementById("footer").style.animation =
    "fadeout 0.2s linear forwards";

  document.getElementById("square2").addEventListener('scroll', function() {
    const scrollableDiv = document.getElementById("square2");
    const scrollPosition = scrollableDiv.scrollTop;
    const width = window.innerWidth;
    const isScrolled = scrollPosition > 0;
    const isNearBottom = scrollableDiv.scrollHeight - scrollableDiv.scrollTop <= scrollableDiv.clientHeight + 30;
  
    document.querySelector(".square").style.animationPlayState = isScrolled ? "paused" : "running";
    document.querySelector(".bottomleftcorner").style.animationPlayState = isScrolled ? "paused" : "running";
    scrollableDiv.style.setProperty("background-color", isScrolled ? "var(--bg-color)" : "var(--bg-color-hero)");
  
    if (width >= 1000) {
      scrollableDiv.style.setProperty("height", isNearBottom ? "calc(100% - 300px)" : "calc(100% - 30px)");
      document.getElementById("footer").style.animation = isNearBottom ? "fadein 0.2s linear forwards" : "fadeout 0.2s linear forwards";
    } else {
      scrollableDiv.style.setProperty("height", "100%");
    }
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
  function getUrlParameter(name) {
    name = name.replace(/[[]/, "\\[").replace(/[\]]/, "\\]");
    var regex = new RegExp("[\\#?&]" + name + "=([^&#]*)");
    var results = regex.exec(location.hash);
    return results ? decodeURIComponent(results[1].replace(/\+/g, " ")) : "";
  }

  function showWarning(icon, message) {
    const warnElement = document.getElementById("warn");
    warnElement.style.display = "block";
    warnElement.innerHTML = `<i class='fa ${icon}'></i> <b>${message}</b>`;
  }

  const parameters = {
    fromRiiConnect24: getUrlParameter("from-riiconnect24"),
    kawaii: getUrlParameter("kawaii")
  };

  if (parameters.fromRiiConnect24 === "true") {
    showWarning("fa-triangle-exclamation", "You were redirected from RC24.xyz!<br /><hr style='margin:8px 0;'/>Following the WiiLink and RiiConnect24 merge, all services have been unified under this site. <br /><u>Please proceed with your installation from here!</u>");
  }

  if (parameters.kawaii === "true") {
    showWarning("fa-heart", "Haiiiiiii :3<br /><hr style='margin:8px 0;'/>We hope you like our vtuber debut!");
    let logos = document.getElementsByClassName("logo");
    for (let logo of logos) {
      logo.setAttribute("src", "/img/logo-kawaii.webp");
      logo.classList.add("kawaii");
    }
  }
});

  const tooltipTriggerList = document.querySelectorAll(
    '[data-bs-toggle="tooltip"]'
  );
  const tooltipList = [...tooltipTriggerList].map(
    tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl)
  );
  const toastElList = document.querySelectorAll(".toast");
  const toastList = [...toastElList].map(
    toastEl => new bootstrap.Toast(toastEl, option)
  );
</script>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  a {
    text-decoration: none;
  }
  .footer-holder {
    bottom: 20px;
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    align-items: center;
    opacity: 0;
    width: 98%;
    height: 250px;
    transition: 0.2;
    position: absolute;
  }
  .top {
    top: calc(50% - 90px);
    left: 50%;
    transform: translate(-50%, -50%);
    width: 95%;
    max-width: 1500px;
    height: 100%;
    min-height: 800px;
    position: relative;
  }
  .symbolholder {
    background-color: var(--bg-color-absolute);
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
    position: fixed;
  }
  #square2 {
    width: calc(100% - 30px);
    height: calc(100% - 30px);
    left: 15.5px;
    top: 15.5px;
    background-color: var(--bg-color-hero);
    transform: translate(0%, 0%);
    border-radius: 4px;
    z-index: 10;
    scroll-behavior: smooth;
    overflow-y: scroll;
    overflow-x: hidden;
    position: absolute;
    transition: 0.3s;
  }
  .footer {
    height: calc(80% - 30px);
  }
  .release-info {
    width: 95%;
    left: 50%;
    transform: translate(-50%, 0);
    position: relative;
  }
  #pathcorner {
    fill: #0d6efd;
  }
  .bottomleftcorner {
    animation: changecolor 10s linear infinite;
  }
  .bottomleftcornerholder {
    width: 400px;
    height: 400px;
    left: 3.2px;
    bottom: -1.2px;
    scale: 31.6%;
    transform: translate(-100%, 100%);
    pointer-events: none;
    z-index: 2;
    position: absolute;
  }
  .backsymbol {
    width: calc(100% - 28px);
    height: calc(100% - 28px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
    position: absolute;
  }
  .mainFooter {
    display: none;
  }
  .square {
    width: 100%;
    height: 100%;
    background: linear-gradient(41deg, #0d6efd 0%, rgba(255, 0, 59, 1) 100%);
    z-index: 0;
    animation: changecolor 10s linear infinite;
    border-radius: 8px;
    position: absolute;
  }

  @keyframes fadeup {
    0% {
      opacity: 0;
      transform: translate(0, 10px);
    }
    100% {
      opacity: 1;
      transform: translate(0, 0px);
    }
  }
  @keyframes changecolor {
    0% {
      filter: hue-rotate(0deg);
    }
    100% {
      filter: hue-rotate(360deg);
    }
  }
  @keyframes fadeout2 {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  @keyframes fadein {
    0% {
      transform: translate(-50%, 20px);
      opacity: 0;
    }
    100% {
      transform: translate(-50%, 0px);
      opacity: 1;
    }
  }
  @keyframes fadeout {
    0% {
      transform: translate(-50%, 0px);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, 20px);
      opacity: 0;
    }
  }

  @media only screen and (max-width: 1000px) {
    .mainFooter {
      top: 37%;
      display: block;
      position: relative;
    }
    .top {
      top: 0;
      transform: translate(-50%, 0);
      height: auto;
      min-height: 0;
      max-width: 1500px;
      position: relative;
    }
    .footer-holder {
      opacity: 0;
      display: none;
    }
    .symbolholder {
      width: 100%;
      height: 100%;
      border-radius: 0px;
    }
    .backsymbol {
      width: 100%;
      height: 100%;
      border-radius: 0px;
    }
    #square2 {
      left: 5px;
      top: 5px;
      width: calc(100% - 10px) !important;
      height: calc(100% - 10px) !important;
    }
    .bottomleftcornerholder {
      display: none;
    }
    .alert {
      top: 30px;
      left: 50%;
      transform: translate(-50%, 0);
      width: 80%;
      position: absolute;
    }
    .footer-holder {
      display: none;
    }
    .square {
      animation: none !important;
      border-radius: 0px;
    }
  }

  @media only screen and (min-width: 2000px) {
    .top {
      top: 50%;
    }
  }

  @media only screen and (min-width: 3000px) {
    .top {
      top: 50px;
      transform: translate(-50%, 0);
      height: 900px;
    }
    .footer-holder {
      bottom: 0;
      left: 50%;
      transform: translate(-50%, -20px);
      width: 2000px;
      position: absolute;
    }
  }
</style>

<style is:global>
  .kawaii {
    filter: invert(0) !important;
  }
</style>
