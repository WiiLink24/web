	}

	.service:hover{
		transform:scale(105%);
		transition: 0.3s;
	}

	.emoji{
		width:24px;
	}

	.dropdown-item:hover .dropdown-text{
		transform:translate(5px, 0);
		transition:0.2s;
	}

	h1 {
		--bg-text: #121212;
		font-family: systemui;
		color:var(--bg-text);
	}

	code {
		font-family:
